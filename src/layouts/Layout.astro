---
import { SEO } from "astro-seo";
import Navbar from "@components/nav/Navbar.astro";
import Footer from "@components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.site).toString();

const { title } = Astro.props;

const makeTitle = title ? title : "Mindstorm Digital";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Mindstorm Digital ist eine Agentur, die sich auf die Entwicklung moderner, zielgruppenorientierter Webseiten und Onlineshops spezialisiert. Online-Marketing-Strategien, Webentwicklung, Beratung."
      canonical={canonicalURL}
      twitter={{
        creator: "@mindstormdigital",
        site: "https://mindstorm.digital",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Mindstorm Digital - Webentwicklung, Online Marketing, Beratung`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "",
        },
      }}
    />
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.12.0/dist/cdn.min.js" defer></script>
  </head>
</html>
<body>
  <Navbar />
  <slot />
  <Footer />
</body>
